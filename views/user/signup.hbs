<div class="back container pt-4">


  <div class=" row div-center justify-content-center mt-5">


    <div class="content " style="min-width:300px">
<div class="content card p-4" style="min-width:350px">

      <h3>Sign up</h3>
      <hr />
       {{#if signUpErr}}
      <p style="color: red;"> User already Exist !  </p> 
      {{/if}}
      <form action="/signup" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Name</label>
          <input required type="text" name="name" class="form-control" id="exampleInputEmail1" placeholder="name">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input required type="email" name="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input pattern=".{8,}"   required title="8 characters minimum" type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Signup</button>
        <hr />
        <button type="button" class="btn btn-link"><a href="/login">Login</a></button>
        
      </form>

    </div></div>


