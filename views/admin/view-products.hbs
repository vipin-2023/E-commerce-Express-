<div class="container" style="max-width: 55%;">


    <section class="mt-5">
        <div class="container">
            <div class="row">
                <a href="/admin/add-product" class="btn btn-success ml-auto">Add Products</a>
            </div>

        </div>


        {{#if products}}

        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">image</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td><img style="width: 50px;height:50px" src="/product-images/{{this._id}}.{{this.type}}" alt="">
                    </td>
                    <td>{{this.Price}}</td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you sure want to delete {{this.name}} ?')">Delete</a>
                    </td>

                </tr>
                {{/each}}

            </tbody>
        </table>
        {{/if}}
    </section>
</div>